SENDER_EMAIL=
SENDER_EMAIL_PASSWORD=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
MOCK_EMAIL_SENDER_ENABLED=true
# Internal Alert Settings (Slack/Teams)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
MOCK_ALERT_SENDER_ENABLED=true
